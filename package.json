{
  "name": "get-open-files",
  "displayName": "get-open-files",
  "description": "Gets the relative paths of all open files in VS Code.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:list-open-files-view",
    "onCommand:get-open-files.openCollectorTab",
    "onCommand:get-open-files.openFolderListerTab",
    "onView:fileNameSearcher.view"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "get-open-files.openCollectorTab",
        "title": "Open File Path Collector"
      },
      {
        "command": "get-open-files.openFolderListerTab",
        "title": "Open Folder Content Lister"
      },
      {
        "command": "fileNameSearcher.showView",
        "title": "Show File Name Searcher"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "get-open-files-sidebar",
          "title": "Open Files List",
          "icon": "$(list-unordered)"
        }
      ]
    },
    "views": {
      "get-open-files-sidebar": [
        {
          "id": "list-open-files-view",
          "name": "Open Files List",
          "contextualTitle": "Open Files List",
          "type": "webview"
        },
        {
          "id": "fileNameSearcher.view",
          "name": "File Name Searcher",
          "contextualTitle": "File Name Searcher",
          "type": "webview"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.99.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}

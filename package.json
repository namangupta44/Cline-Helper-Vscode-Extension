{
  "name": "cline-helper",
  "displayName": "Cline Helper",
  "publisher": "namangupta",
  "version": "0.1.0",
  "description": "Helpful commands/utilities for Cline.",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "media/logo_128x128.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/namangupta44/Cline-Helper-Vscode-Extension"
  },
  "bugs": {
    "url": "https://github.com/namangupta44/Cline-Helper-Vscode-Extension/issues"
  },
  "homepage": "https://github.com/namangupta44/Cline-Helper-Vscode-Extension#readme",
  "keywords": [
    "cline",
    "helper",
    "utilities"
  ],
  "activationEvents": [
    "onView:main-view",
    "onCommand:cline-helper.openInEditor",
    "onCommand:cline-helper.openSettings"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cline-helper.openInEditor",
        "title": "Open in Editor",
        "icon": "$(multiple-windows)"
      },
      {
        "command": "cline-helper.openSettings",
        "title": "Settings",
        "icon": "$(gear)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "cline-helper-sidebar",
          "title": "Cline Helper",
          "icon": "$(list-unordered)"
        }
      ]
    },
    "views": {
      "cline-helper-sidebar": [
        {
          "id": "main-view",
          "name": "Cline Helper",
          "contextualTitle": "Cline Helper",
          "type": "webview"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "cline-helper.openInEditor",
          "when": "view == main-view",
          "group": "navigation"
        },
        {
          "command": "cline-helper.openSettings",
          "when": "view == main-view",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "compile": "tsc -p ./",
    "watch": "concurrently \"npm run build -C webview-ui -- --watch\" \"tsc -b -w\"",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "build": "npm run build -C webview-ui && tsc -b",
    "package": "vsce package",
    "publish:patch": "vsce publish patch",
    "publish:minor": "vsce publish minor",
    "publish:major": "vsce publish major",
    "install:local": "npm run build && vsce package && code --install-extension *.vsix"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.99.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.6.2",
    "concurrently": "^8.2.2",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "zustand": "^5.0.8"
  }
}
